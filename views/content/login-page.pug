extends ../base

block content
    h1 Войти
    form.pretty_form#login-form
        label(for="email") Почта:
        input(type="email", id="email", name="email", required)
        label(for="password") Пароль:
        input(type="password", id="password", name="password", required)
        .error_message

        button(type="submit") Войти

        script(async, src="https://telegram.org/js/telegram-widget.js?22", data-telegram-login="FishkaAuthBot", data-size="large", data-onauth="onTelegramAuth(user)", data-request-access="write")

